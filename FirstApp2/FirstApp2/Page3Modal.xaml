<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp2.Page3Modal">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="EAdress" Text="e-mail:" HorizontalTextAlignment="Start" TextColor="Black" FontSize="20"/>
            <Button Clicked="button7_Clicked" x:Name="button7" Text="Добавить запись"></Button>
            <Entry x:Name="EntryAdress"  Placeholder="Изменить e-mail" ></Entry>
            <Entry x:Name="EntryName" Placeholder="Изменить Имя" ></Entry>
            <Entry x:Name="EntrySurname" Placeholder="Изменить Фамилию" ></Entry>
            <Button Clicked="button6_Clicked" x:Name="button6" Text="Сохранить"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>