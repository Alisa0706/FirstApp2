<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Регистрация" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="EntryName" Placeholder="Имя пользователя"></Entry>
        <Entry x:Name="EntryPassword" IsPassword ="True" Placeholder="Пароль"></Entry>

        <Button Clicked="button1_Clicked" x:Name="button1" Text="Зарегистрироваться"></Button>
        <Button  Clicked="button2_Clicked" x:Name="button2" Text="Авторизация"></Button>
    </StackLayout>

</ContentPage>
